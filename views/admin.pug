extends layout

block content

    .container.my-4.bg-light
        .text-center.text-info.display-4.my-3 STUDENTS RECORD ENTRY
        div
            form(action="http://localhost:4400/student/" method="post" class="was-validated shadow font-weight-bold")
                .form-group.mx-3
                    label(for="" class="text-uppercase") Name
                    input(type="text" name="name" id="" class="form-control" required)
                .form-group.mx-3
                    label(for="" class="text-uppercase") Class
                    input(type="text" name="class" id="" class="form-control" required)
                .form-group.mx-3
                    label(for="" class="text-uppercase") Subject
                    input(type="text" name="subjectname" id="" class="form-control" required)
                .form-group.mx-3
                    label(for="" class="text-uppercase") Assessment Type
                    input(type="text" name="type" id="" class="form-control" required)               
                .form-group.mx-3
                    label(for="" class="text-uppercase") Score 
                    input(type="text" name="score" id="" class="form-control" required)
                .form-group.mx-3
                    label(for="" class="text-uppercase") Total 
                    input(type="text" name="total" id="" class="form-control" required)
                .text-center
                    input(type="submit" value="Send Post" class="btn btn-primary mt-4 mb-5")